<!DOCTYPE html>
<html lang="en">
    <head>
        <%=
        render '_head',
          :keywords    => item[:keywords],
          :description => item[:description],
          :canonical   => url_for(item),
          :page_title  => item[:title]
        %>
    </head>
    <body>
        <%= render '_header' %>

        <div id="content" class="row">
            <section>
                <header>
                    <h1><%= item[:title] %></h1>
                </header>

                <%= yield %>
            </section>
        </div>

        <%= render '_footer' %>
    </body>
</html>
