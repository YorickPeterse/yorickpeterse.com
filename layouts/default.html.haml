%html(lang="en")
  %head
    = render('_head',
      :keywords    => item[:keywords],
      :description => item[:description],
      :canonical   => url_for(item),
      :page_title  => item[:title])

  %body
    = render('_header')

    #content.row
      %section
        %header
          %h1= item[:title]

          - if item[:created_at]
            %p.meta
              Published on: #{date_tag(item[:created_at])}

        = yield

    = render('_footer')
