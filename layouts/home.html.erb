<!DOCTYPE html>
<html lang="en">
    <head>
        <%=
        render '_head',
          :keywords    => item[:keywords],
          :description => item[:description]
        %>
    </head>
    <body id="home">
        <%= render '_header' %>

        <div id="content" class="row">
            <section>
                <header>
                    <h1><%= item[:title] %></h1>
                </header>

                <%= yield %>

                <h2>Articles</h2>

                <table>
                    <tbody>
                        <% sorted_articles.each do |article| %>
                        <tr>
                            <td>
                                <a href="<%= url_for(article) %>"
                                title="<%= article[:title] %>">
                                    <%= article[:title] %>
                                </a>
                            </td>
                            <td class="align-right">
                                <%= date_tag(article[:created_at]) %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </section>
        </div>

        <%= render '_footer' %>
    </body>
</html>
